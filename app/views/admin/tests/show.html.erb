<h1><%= t('.header', title: @test.title) %></h1>
<div class="links">
  <%= link_to t('links.back'),admin_tests_path %>
  <%= link_to t('links.edit'), edit_admin_test_path(@test) %>
  <%= link_to t('links.delete'), admin_test_path(@test), method: :delete %>
</div>
<p><%= t('.category', title: @test.category.title) %></p>
<p><%= t('.level', level: @test.level) %></p>
<h2><%= t('.questions.header', title: nil) %></h2>
<%= link_to t('links.add'), new_admin_test_question_path(@test) %>
<table>
  <thead>
    <th><%= t('.table.body', body: nil) %></th>
    <th colspan="3"><%= t('.table.actions') %></th>
  </thead>
  <tbody>
      <%= render @test.questions %>
  </tbody>
</table>
