<div class="col-12 col-sm-5 border rounded p-3 border-info">
  <%= render 'shared/errors', object: @feedback %>
  <%= form_with url: feedback_path, local: true, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :author, t('feedback.author') %>
      <%= f.text_field :author, class: "form-control",
        value: current_user.try(:email), required: true,
        pattern: '^[^@]+@[^@]+[\.a-zA-Z0-9]$' %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, class: "form-control", required: true %>
    </div>
    <%= f.submit t('feedback.send'), class: 'btn btn-outline-primary' %>
  <% end %>
</div>
