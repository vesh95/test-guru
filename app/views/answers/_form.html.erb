<%= form_with(model: [@question, @answer], local: true) do |f| %>
  <%= render 'shared/errors', object: @answer %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, id: :answer_body, rows: 7, cols: 80 %>
  </div>
  <div class="form-group">
    <%= f.label :correct %>
    <%= f.check_box :correct, id: :answer_correct %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
