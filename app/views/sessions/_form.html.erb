<%= form_with url: sessions_path, local: true do |f| %>
  <%= show_flash %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.submit 'Signin' %>
  </div>
<% end %>
